<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ObsoleteLayoutParam,HardcodedText,UselessParent" >

      <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center_vertical"
         android:background="@drawable/title_tool_bg" 
          >

       <TextView
           android:id="@+id/tv_sendcard_set"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="8dp"
           android:paddingTop="25dp"
           android:text="@string/tv_interface_send_card"
           android:textSize="20sp" />

      </LinearLayout>


        <RelativeLayout
            android:id="@+id/led_send_setWH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_send_cardwidth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="right"
                android:text="@string/led_width_set"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Sp_sendcard_w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tv_send_cardwidth"
                android:ems="10"
                android:inputType="numberSigned"
                android:textSize="20sp" >

                <requestFocus />
            </EditText>
<!--
            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="86dp"
                android:layout_toRightOf="@+id/Sp_sendcard_w"
                android:text="3D" />
-->
          </RelativeLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_send_cardheight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:text="@string/led_height_set"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Sp_sendcard_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned"
                android:textSize="20sp" />
<!-- 
            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:text="Left and right" />
 -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_cut_p_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="@string/led_cut_Offsetx_set"
                android:textSize="20sp" />

              <EditText
                android:id="@+id/tv_cut_Offsetx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20sp"
                android:inputType="numberSigned" >

              </EditText>
<!-- 
              <RadioButton
                  android:id="@+id/radioButton2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Top and button" />
 -->
            </LinearLayout>
            
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_cut_p_y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="@string/led_cut_OffsetY_set"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/tv_cut_Offsety"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
            	android:textSize = "20sp"   
                android:inputType="numberSigned" />
<!--
            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frame sequential" />
-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="@string/version"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtReadVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp" 
                />

            

        </LinearLayout>
          
          

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:gravity="center"
            android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_ensure"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_sure"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_Cancel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/btn_Cancel"
            android:textSize="20sp" />

       </LinearLayout>

</LinearLayout>