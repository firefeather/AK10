<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="HardcodedText,ButtonStyle,UselessParent" >

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/custom_bg"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_group_channel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="0dp"
            android:text="@string/btn_group_channel" />

        <Button
            android:id="@+id/btn_SendAllConnParmas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="0dp"
            android:text="@string/leddisplay_connection_semdConection" />
        <Button
            android:id="@+id/btn_SendAllParmas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="0dp"
            android:text="@string/leddisplay_save_cabinetparameter" />
    </LinearLayout>

</RelativeLayout>