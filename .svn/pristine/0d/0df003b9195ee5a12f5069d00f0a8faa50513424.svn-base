<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="UnknownIdInLayout,ObsoleteLayoutParam,HardcodedText,InefficientWeight,ContentDescription" >

    <RelativeLayout
        android:id="@+id/palyer_config_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_tool_bg" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_playerback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="670dp"
                android:drawableTop="@drawable/selector_tool_back"
                android:text="@string/cabinet_back_text"
                android:textSize="@dimen/size15" />

            <TextView
                android:id="@+id/text_playerconfigmain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:drawableTop="@drawable/selector_home"
                android:text="@string/ledconfig_main"
                android:layout_marginRight="20dp"
                android:textSize="@dimen/size15" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewPathTitile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linearLayout1"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="@string/Player_config"
            android:textSize="25sp" />
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnRectParmsave"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/palyer_config_title"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/checkfullscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leddisplay_config_fullscreen"
            android:textSize="@dimen/size30" />

        <include
            android:layout_width="879dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.31"
            layout="@layout/windowsizese" />

    </LinearLayout>

    <Button
        android:id="@+id/btnRectParmsave"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/title_button"
        android:text="@string/leddisplay_save"
        android:textColor="@color/white"
        android:textSize="@dimen/size30" />

</RelativeLayout>