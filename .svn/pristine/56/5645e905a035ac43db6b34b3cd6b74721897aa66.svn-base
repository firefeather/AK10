<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ObsoleteLayoutParam,HardcodedText,UselessParent" >

    <LinearLayout
        android:id="@+id/linear_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
       android:background="@drawable/title_tool_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_capturecard_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:paddingTop="25dp"
            android:text="@string/tv_channel_capture_card"
            android:textSize="20sp" />
         </LinearLayout>



           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_Resolution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="@string/led_Resolution_set"
                android:textSize="20sp" />
         

            <Spinner
                android:id="@+id/sp_Resolution"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
              />

            <TextView
                android:id="@+id/tv_frame_frequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_gravity="center_vertical"
                android:text="@string/led_frame_frequency_set"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/sp_Frame"
                android:layout_width="200dp"
                android:layout_height="wrap_content" 
                android:textSize="20sp"/>
           </LinearLayout>
           
           
         <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            >
          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_p_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="right"
                android:text="@string/led_pianx_set"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Ed_AcqOffsetx"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:background="@null"
                android:textSize="20sp" >
           
            </EditText>

            <TextView
                android:id="@+id/tv_p_y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="@string/led_pianY_set"
                android:textSize="20sp" />
            
            <EditText
               android:id="@+id/Ed_AcqOffsety"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:ems="10"
               android:inputType="number"
               android:textSize="20sp" 
               android:background="@null">
             
               <requestFocus />
           </EditText>
            </LinearLayout>
            <Button
                android:id="@+id/SetEdid"
                android:layout_width="200dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:text="@string/set"
                android:textSize="20sp" />

            </RelativeLayout>

           <RelativeLayout
            android:layout_width="match_parent"
           android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:gravity="center_vertical"
             >
            
            <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:gravity="center_vertical"
	            android:orientation="horizontal" >
            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/led_Resolution_set"
                android:layout_marginLeft="20dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ResolutionRead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"/>
      
           <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:text="@string/led_frame_frequency_set"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/FrameRead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp" />
            
            </LinearLayout>

            <Button
                android:id="@+id/btnRead"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:text="@string/led_frame_read"
                android:textSize="20sp" />
     
        </RelativeLayout>
        
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/version"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtVersionDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"/>
          
        </LinearLayout>
        
      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal" >
        <Button
            android:id="@+id/btn_acq_ensure"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/btn_sure"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_acq_Cancel"
             android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="@string/btn_Cancel"
            android:textSize="20sp" />
       </LinearLayout>

</LinearLayout>