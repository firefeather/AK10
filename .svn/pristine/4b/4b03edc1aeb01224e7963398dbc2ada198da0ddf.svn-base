<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/groupmanage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     android:background="@drawable/common_bg"
    tools:context=".player.EditActivity" >

    <TextView
        android:id="@+id/tv_SeptalLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0FFF0"
        android:layout_below="@+id/top"
         />

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp" >

        <TextView
            android:id="@+id/tvMessageAuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_channel_manage_list"
            android:textColor="@color/white"
            
            android:textSize="20sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/DragGroupListView"
        android:layout_width="fill_parent"
        android:layout_height="650dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/layout_groupadd"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000"
        android:textColor="@color/white" >
    </ListView>

    <LinearLayout
        android:id="@+id/layout_groupadd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_SeptalLine"
        android:orientation="horizontal" >
        
        <TextView 
            android:id="@+id/text_groupadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/groupadd"
            android:drawableLeft="@drawable/selector_cabinet_add"
            android:textSize="25sp"
            android:layout_gravity="center_vertical"
            />
        
    </LinearLayout>
    
    <LinearLayout         
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_above="@+id/layout_groupadd"
    >
        
       <TextView
        android:id="@+id/text_gpmanageback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:drawableLeft="@drawable/selector_tool_back"
        android:text="@string/cabinet_back_text"
        android:textSize="20sp" />
        
    </LinearLayout>



</RelativeLayout>