<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.szaoto.diyprogressbar.MainActivity"
    tools:ignore="MergeRootFrame,HardcodedText,UselessParent,InefficientWeight" >

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="50dp"
        android:background="@anim/shape_progress"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_layout"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ProgressBar
                android:id="@+id/loading_process_dialog_progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="4dp"
                android:indeterminate="false"
                android:indeterminateDrawable="@drawable/progress_color" />

            <TextView
                android:id="@+id/textViewPathTitile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="0.84"
                android:textColor="@color/white" />
               <!--  android:text="数据正在加载中......" -->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="4dp"
                android:textSize="20sp"
                android:textColor="@color/white" />
             <!--    android:text="请稍后..." -->

            <TextView
                android:id="@+id/text_title_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                 />
        </LinearLayout>

    </RelativeLayout>
    
 </RelativeLayout>   

